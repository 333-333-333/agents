meta {
  name: Send and Verify Notification
  type: http
  seq: 3
}

post {
  url: {{baseUrl}}/api/v1/notifications/send
  body: json
  auth: none
}

headers {
  Content-Type: application/json
}

body:json {
  {
    "channel": "push",
    "recipient": "device-token-abc123",
    "subject": "Nueva reserva",
    "content": "Tienes una nueva solicitud de paseo."
  }
}

script:post-response {
  // Save the notification ID for subsequent requests
  if (res.getStatus() === 200) {
    bru.setVar("notificationId", res.getBody().data.id);
    bru.setVar("notificationChannel", res.getBody().data.channel);
  }
}

tests {
  test("status is 200", function() {
    expect(res.getStatus()).to.equal(200);
  });

  test("can extract notification ID", function() {
    const id = bru.getVar("notificationId");
    expect(id).to.be.a('string');
    expect(id.length).to.be.greaterThan(0);
  });

  test("channel is push", function() {
    const channel = bru.getVar("notificationChannel");
    expect(channel).to.equal('push');
  });
}
